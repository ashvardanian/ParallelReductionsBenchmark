{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB C++: Launch",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Debug",
            "program": "${workspaceFolder}/build_debug/reduce_bench",
            "args": [
                "--benchmark_filter=cuda"
            ]
        },
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Debug",
            "program": "${workspaceFolder}/build_debug/reduce_bench",
            "args": [
                "--benchmark_filter=cuda"
            ]
        }
    ]
}